<body ng-app="onlineShop" class="fixed-header fixed-navigation smart-rtl" data-ui-view="root"  data-autoscroll="false">
    <div>@Html.Partial("~/Views/Partials/Header.cshtml")</div>
    @if (new string[] {"account"}.All(x=>!x.Equals(ViewBag.CurrentController, StringComparison.CurrentCultureIgnoreCase)))
