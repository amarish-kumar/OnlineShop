<div class="navbar-form navbar-right" style="width:30%" ng-controller="searchController">
    <div class="input-group  hidden-mobile">
        <div class="input-group-btn">
            <button ng-cloak type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                {{selectedCategory.name}} <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li ng-repeat="category in categories" ng-class="{active: category.id == selectedCategory.id}">
                    <a href="javascript:void(0)" ng-click="selectCategory(category.id)"><i ng-if="category.id == selectedCategory.id" class="fa fa-check"></i>{{category.name}}</a>
                </li>
            </ul>
        </div>
        <input class="form-control" ng-model="search" ng-keypress="searchInputKeyPress($event)" type="text" placeholder="Search..." id="search-project">
        <div class="input-group-btn">
            <button type="button" class="btn btn-default" ng-click="searchClicked()">
                &nbsp;&nbsp;&nbsp;<i class="fa fa-fw fa-search fa-lg"></i>&nbsp;&nbsp;&nbsp;
            </button>
        </div>
    </div>
</div>