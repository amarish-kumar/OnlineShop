@using OnlineShop.Service.ModelViews
@model ProductView
@{
    ViewBag.Title = "";
}
@section scripts{ 
<script src="@Url.Content("~/")app/controllers/reviewController.js"></script>
}
@Html.HiddenFor(x => x.Id)
<div id="main">
    <section id="widget-grid" class="catContent">

        <!-- row -->

        <div class="row">

            <div class="col-sm-12 col-md-12 col-lg-12">
                <!-- product -->
                <div class="product-content product-wrap clearfix product-deatil">
                    <div class="row">
                        <div class="col-md-5 col-sm-12 col-xs-12 ">
                            <div class="product-image">
                                <img src="@Model.ProductImagePath" alt="194x228" class="img-responsive">
                            </div>
                        </div>
                        <div class="col-md-7 col-sm-12 col-xs-12" style="padding-left:15px">

                            <h2 class="name">
                                @Model.Name
                                <small></small>
                                <i class="fa fa-star fa-2x @string.Format("{0}",(Model.ProductRating>0?"text-primary":"text-muted"))"></i>
                                <i class="fa fa-star fa-2x @string.Format("{0}",(Model.ProductRating>1?"text-primary":"text-muted"))"></i>
                                <i class="fa fa-star fa-2x @string.Format("{0}",(Model.ProductRating>2?"text-primary":"text-muted"))"></i>
                                <i class="fa fa-star fa-2x @string.Format("{0}",(Model.ProductRating>3?"text-primary":"text-muted"))"></i>
                                <i class="fa fa-star fa-2x @string.Format("{0}",(Model.ProductRating>4?"text-primary":"text-muted"))"></i>
                                <span class="fa fa-2x"><h5>(@Model.ProductReviews.Count()) Votes</h5></span>


                            </h2>
                            <hr>
                            <h3 class="price-container">
                                @Model.PriceInDollar
                                <small>*includes tax</small>
                            </h3>

                            <div class="certified">
                                <ul>
                                    <li><a href="javascript:void(0);">Delivery time<span>7 Working Days</span></a></li>
                                    <li><a href="javascript:void(0);">Certified<span>Quality Assured</span></a></li>
                                </ul>
                            </div>
                            <hr>
                            <div class="description description-tabs">


                                <ul id="myTab" class="nav nav-pills">
                                    <li class="active"><a href="#more-information" data-toggle="tab" class="no-margin" aria-expanded="true">Product Description </a></li>
                                        <li class=""><a href="#reviews" data-toggle="tab" aria-expanded="false">Reviews</a></li>
                                </ul>
                                <div id="myTabContent" class="tab-content">
                                    <div class="tab-pane fade active in" id="more-information">
                                        <br>
                                        <strong>@Model.Name</strong>
                                        <p>@Model.Description </p>
                                    </div>
                                  
                                        <div class="tab-pane fade" id="reviews" ng-controller="reviewController">
                                            <br>
                                                @if (@User.Identity.IsAuthenticated)
                                                {
                                                            <div ng-include="@string.Format("'{0}app/partials/productReviewForm.html'",Url.Content("~"))"></div>                                 
                                                }
                                            <div ng-include="@string.Format("'{0}app/partials/productReviews.html'",Url.Content("~"))"></div>                                 
                                            
                                        </div>
                                </div>


                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12 col-md-6 col-lg-6">
                                    @Html.Partial("~/Views/Catalog/_AddToCartBtn.cshtml", Model.Id)
                                    @Html.Partial("~/Views/Catalog/_BuytBtn.cshtml", Model.Id)
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end product -->
            </div>

        </div>
        <!-- end row -->

    </section>
</div>
